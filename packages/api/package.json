{
    "name": "@inventory-app/api",
    "version": "1.0.0",
    "main": "app.ts",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "dev": "concurrently --names \"TS,SERVER\" -c \"bgBlue,bgMagenta\" \"yarn:app:ts:watch\" \"yarn:app:run\"",
        "app:run": "fastify start -c fastify.config.js -w dist/app.js",
        "app:ts": "tsc",
        "app:ts:watch": "yarn app:ts -w",
        "app:debug": "node --inspect=9239 ./node_modules/.bin/fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js --debug-port=9239",
        "app:seed": "ts-node ./src/lib/scripts/db/seed.ts | pino-pretty",
        "build": "yarn app:ts",
        "lint": "eslint .",
        "start": "fastify start -c fastify.config.prod.js dist/app.js",
        "test": "yarn app:ts && yarn test:ts && yarn test:run",
        "test:run": "tap --ts \"test/**/*.test.ts\" -R spec",
        "test:ts": "tsc -p test/tsconfig.json",
        "test:ts:watch": "yarn test:ts -w"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fastify/auth": "^4.2.0",
        "@fastify/autoload": "^5.0.0",
        "@fastify/cookie": "^8.3.0",
        "@fastify/cors": "^8.2.0",
        "@fastify/env": "^4.2.0",
        "@fastify/jwt": "^6.5.0",
        "@fastify/sensible": "^5.0.0",
        "@inventory-app/types": "1.0.0",
        "@lukeed/ms": "^2.0.1",
        "@sinclair/typebox": "^0.25.13",
        "cookie": "^0.5.0",
        "debug": "^4.3.4",
        "dotenv": "^16.0.0",
        "fast-jwt": "^2.0.2",
        "fastify": "^4.0.0",
        "fastify-cli": "^5.7.0",
        "fastify-plugin": "^4.0.0",
        "http-errors": "^2.0.0",
        "mongoose": "^6.8.0",
        "pino": "^8.5.0",
        "pino-pretty": "^9.0.0",
        "supports-color": "^9.3.1"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@types/cookie": "^0.5.1",
        "@types/debug": "^4.1.7",
        "@types/http-errors": "^2.0.1",
        "@types/node": "^18.0.0",
        "@types/tap": "^15.0.5",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "concurrently": "^7.6.0",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "fastify-tsconfig": "^1.0.1",
        "prettier": "2.8.1",
        "tap": "^16.3.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "volta": {
        "node": "18.12.1"
    }
}
